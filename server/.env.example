# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=GoldenMunchPOS

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=7d

# Admin JWT
ADMIN_JWT_SECRET=your_admin_jwt_secret
ADMIN_JWT_EXPIRES_IN=8h

# Cashier PIN
CASHIER_JWT_SECRET=your_cashier_jwt_secret
CASHIER_JWT_EXPIRES_IN=12h

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Kiosk Settings
KIOSK_SESSION_TIMEOUT=300000
ORDER_VERIFICATION_CODE_LENGTH=6

# Payment Settings
GCASH_MERCHANT_ID=your_gcash_merchant_id
PAYMAYA_PUBLIC_KEY=your_paymaya_public_key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
