# Production Environment Configuration for Render
# ==============================================
# IMPORTANT: Replace placeholder values with your actual Render configuration
# These values should be set in Render's Environment Variables dashboard

NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration (MySQL)
# For cloud databases, set these in Render environment variables
# ACTUAL CREDENTIALS are in .env.production.local (NOT committed to git)
DB_HOST=your-mysql-host.example.com
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password
DB_NAME=your_database_name
# Set to 'true' for cloud databases that require SSL (Aiven, AWS RDS, etc.)
DB_SSL=false

# JWT Authentication Secrets
# CRITICAL: Generate secure random strings (at least 64 characters)
# You can generate them with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_RANDOM_STRING
ADMIN_JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_RANDOM_STRING
CASHIER_JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_RANDOM_STRING

# CORS Configuration
# Add your frontend URLs (comma-separated, no spaces)
# Note: Kiosk localhost origins (3000, 3001, 3002) are automatically included in app.ts
# Vercel URL will be added here once deployment completes
CORS_ORIGIN=https://golden-munch-pos-system-with-custom-tau.vercel.app,https://goldenmunch-cashieradmin.onrender.com,https://goldenmunch-pos-system-with-custom-cake-lcxl.onrender.com

# Mobile Editor URLs
# Replace with your actual Render service URLs
MOBILE_EDITOR_URL=https://goldenmunch-pos-system-with-custom-cake-lcxl.onrender.com
BACKEND_URL=https://goldenmunch-server.onrender.com
FRONTEND_URL=https://golden-munch-pos-system-with-custom-tau.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760

# Supabase Configuration (for image storage)
# IMPORTANT: Get these from https://app.supabase.com/project/_/settings/api
# Use the Service Role key (not the anon key) for server-side operations
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Logging
LOG_LEVEL=info
