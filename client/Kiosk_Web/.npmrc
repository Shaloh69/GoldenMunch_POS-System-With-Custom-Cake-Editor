# Increase timeouts for slow networks
fetch-timeout=600000
fetch-retries=10
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=180000

# Use production registry
registry=https://registry.npmjs.org/

# Legacy peer dependencies (avoid conflicts with HeroUI)
legacy-peer-deps=true

# Engine strict (prevent incompatible Node versions)
engine-strict=true

# If behind corporate proxy, uncomment and configure:
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080

# Disable strict SSL only if absolutely necessary (corporate proxies)
# strict-ssl=false