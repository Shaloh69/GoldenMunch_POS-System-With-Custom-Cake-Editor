# PRODUCTION BUILD USING DEV SERVER
# This is a workaround for HeroUI v2 SSR issues
# Uses Next.js dev server with production optimizations

FROM node:20-alpine

WORKDIR /app

# Install dumb-init
RUN apk add --no-cache dumb-init

# Copy package files
COPY package*.json ./

# Install ALL dependencies (dev included for Next.js dev server)
# Use --legacy-peer-deps for HeroUI compatibility
RUN npm ci --legacy-peer-deps --ignore-scripts && npm cache clean --force

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose port (Render overrides with $PORT env var)
EXPOSE 3002

# Set production environment variables
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3002

# Health check - uses dynamic port from environment
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD node -e "const port = process.env.PORT || 3002; require('http').get('http://localhost:' + port, (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Use dumb-init
ENTRYPOINT ["dumb-init", "--"]

# Start dev server on all interfaces for production use
# This skips the build phase that fails with HeroUI SSR bugs
# Use shell command to properly interpolate PORT environment variable (like cashieradmin does)
CMD ["sh", "-c", "npx next dev -H 0.0.0.0 -p ${PORT:-3002}"]
