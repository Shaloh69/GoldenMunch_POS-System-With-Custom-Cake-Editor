{
  "name": "goldenmunch-cashieradmin-electron",
  "version": "1.0.0",
  "description": "GoldenMunch Cashier Admin Electron App with Printer Support",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.goldenmunch.cashieradmin",
    "productName": "GoldenMunch CashierAdmin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "electron",
    "pos",
    "cashier",
    "printer",
    "goldenmunch"
  ],
  "author": "GoldenMunch",
  "license": "ISC",
  "dependencies": {
    "@node-escpos/usb-adapter": "^0.3.1",
    "electron-store": "^8.1.0",
    "node-thermal-printer": "^4.5.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
